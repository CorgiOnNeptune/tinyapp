<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-dark">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link align-self-center" href="/urls">My TinyURLs</a>
        <a class="nav-item nav-link align-self-center" href="/urls/new">Create New TinyURL</a>
      </div>
    </div>
    <div class="nav navbar-nav navbar-right">
      <% if (!currentUser || currentUser === undefined) { %>
        <form class="form-inline" action="/login" style="padding:10px;">
          <button type="submit" class="btn btn-outline-light">Login</button>
        </form>
        <form class="form-inline" action="/register">
          <button type="submit" class="btn btn-outline-warning">Register</button>
        </form>
      <% } else { %>
        <form class ="form-inline" action="/logout" method="POST">
        <p style="margin:auto; padding: 10px; color: whitesmoke;">Hello, <%= currentUser.email %>!</p>
          <button type="submit" class="btn btn-outline-light">Logout</button>
      </form>
      <% } %>
    </div>
  </nav>
</header>